<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <!-- Text Logo Splash Screen Theme -->
    <style name="TextLogoSplashScreenTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_dimen_30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_150dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorTextSplashScreen</item>
    </style>

    <!-- Image Logo Splash Screen Theme -->
    <style name="ImageLogoSplashScreenTheme" >
        <item name="android:layout_width">@dimen/dimen_100dp</item>
        <item name="android:layout_height">@dimen/dimen_100dp</item>
        <item name="android:layout_below">@id/text_app_splash</item>
        <item name="android:layout_marginTop">@dimen/dimen_30dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- Legal Property Splash Screen Theme  -->
    <style name="LegalPropertySplashScreenTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_100dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_15dp</item>
        <item name="android:textColor">@color/colorTextSplashScreen</item>
        <item name="android:textSize">@dimen/text_dimen_14sp</item>
    </style>

    <!-- Image Empty Logo Catalog Theme -->
    <style name="ImageEmptyLogoCatalogTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Text Empty Title Theme -->
    <style name="TextEmptyTitleTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/empty_inventory</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">@dimen/dimen_16dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Text Empty Subtitle Theme -->
    <style name="TextEmptySubtitleTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/empty_title_text</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">@dimen/dimen_8dp</item>
        <item name="android:paddingStart">@dimen/dimen_8dp</item>
        <item name="android:paddingEnd">@dimen/dimen_8dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- FabTheme -->
    <style name="FabTheme" >
        <item name="android:layout_width">@dimen/dimen_60dp</item>
        <item name="android:layout_height">@dimen/dimen_60dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <!-- Text Name Catalog Theme -->
    <style name="TextNameCatalogTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:paddingEnd">@dimen/padding_end</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Text Type Catalog Theme -->
    <style name="TextTypeCatalogTheme" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- Text ExpDate Catalog Theme -->
    <style name="TextExpDateCatalogTheme" >
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Text Price Catalog Theme -->
    <style name="TextPriceCatalogTheme" >
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Text Discount Price Catalog Theme -->
    <style name="TextDiscountPriceCatalogTheme" >
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Text Quantity Catalog Theme -->
    <style name="TextQtyCatalogTheme" >
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/colorTextQty</item>
        <item name="android:textSize">@dimen/text_dimen_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Image Sale Button Theme -->
    <style name="ImageSaleButtonTheme" >
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/dimen_30dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <!-- Layout Details Theme -->
    <style name="LayoutDetailsTheme" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:paddingEnd">@dimen/padding_end</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
    </style>

    <!-- Layout Label Details Theme -->
    <style name="LayoutLabelDetailsTheme" >
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_details</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Layout Label Editor Theme -->
    <style name="LayoutLabelEditorTheme" parent="LayoutLabelDetailsTheme">
        <item name="android:layout_marginEnd">@dimen/margin_end_editor</item>
    </style>

    <!-- Layout Image Button Theme -->
    <style name="LayoutImageButtonTheme" >
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">center</item>
    </style>

    <!-- Layout Text Editor/Details Theme -->
    <style name="LayoutTextEditorDetailsTheme" >
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/secondary_text_edit_details</item>
    </style>

    <!-- Layout Image Medicine -->
    <style name="LayoutImageMedicine" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_200dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/dimen_30dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_30dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_30dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_20dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Layout Label Note Theme -->
    <style name="LayoutLabelNoteTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_editor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_vertical|top</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Layout Text Editor/Details Note Theme -->
    <style name="LayoutTextEditorDetailsNoteTheme" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_100dp</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical|top</item>
        <item name="android:maxLines">10</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/secondary_text_edit_details</item>
    </style>





</resources>
