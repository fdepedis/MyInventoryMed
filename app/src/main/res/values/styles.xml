<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <!-- Text Logo Splash Screen Theme -->
    <style name="TextLogoSplashScreenTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_dimen_30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_150dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorTextSplashScreen</item>
    </style>

    <!-- Image Logo Splash Screen Theme -->
    <style name="ImageLogoSplashScreenTheme" >
        <item name="android:layout_width">@dimen/dimen_100dp</item>
        <item name="android:layout_height">@dimen/dimen_100dp</item>
        <item name="android:layout_below">@id/text_app_splash</item>
        <item name="android:layout_marginTop">@dimen/dimen_30dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- Legal Property Splash Screen Theme  -->
    <style name="LegalPropertySplashScreenTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_100dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_15dp</item>
        <item name="android:textColor">@color/colorTextSplashScreen</item>
        <item name="android:textSize">@dimen/text_dimen_14sp</item>
    </style>

    <!-- Image Empty Logo Catalog Theme -->
    <style name="ImageEmptyLogoCatalogTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Text Empty Title Theme -->
    <style name="TextEmptyTitleTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/empty_inventory</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">@dimen/dimen_16dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Text Empty Subtitle Theme -->
    <style name="TextEmptySubtitleTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/empty_title_text</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">@dimen/dimen_8dp</item>
        <item name="android:paddingStart">@dimen/dimen_8dp</item>
        <item name="android:paddingEnd">@dimen/dimen_8dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- FabTheme -->
    <style name="FabTheme" >
        <item name="android:layout_width">@dimen/dimen_60dp</item>
        <item name="android:layout_height">@dimen/dimen_60dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

</resources>
