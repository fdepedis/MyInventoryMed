<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_list_item"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30dp">
        </View>

        <LinearLayout
            android:id="@+id/med_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingEnd="@dimen/padding_end"
            android:paddingStart="@dimen/padding_start">

            <TextView
                android:id="@+id/tv_label_med_name"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_end_details"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical|end"
                android:text="@string/label_details_med_name"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tv_value_med_name"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/colorPrimaryLight"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding_start"
                android:text="Name"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/secondary_text_details" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/med_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingEnd="@dimen/padding_end"
            android:paddingStart="@dimen/padding_start">

            <TextView
                android:id="@+id/tv_label_med_type"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_end_details"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical|end"
                android:text="@string/label_details_med_type"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/primary_text" />

            <Spinner
                android:id="@+id/spinner_med_type"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/colorPrimaryLight"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/secondary_text_details"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/med_quantity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingEnd="@dimen/padding_end"
            android:paddingStart="@dimen/padding_start">

            <TextView
                android:id="@+id/tv_label_med_quantity"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_end_details"
                android:layout_weight="1.35"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical|end"
                android:text="@string/label_details_med_quantity"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/primary_text" />

            <ImageButton
                android:id="@+id/img_med_inc"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_end_details"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryLight"
                android:gravity="center"
                android:src="@drawable/ic_add"
                android:scaleType="fitCenter"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/secondary_text_details" />

            <TextView
                android:id="@+id/tv_value_med_quantity"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_end_details"
                android:layout_weight="1.5"
                android:background="@color/colorPrimaryLight"
                android:gravity="center"
                android:text="Quantity"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/secondary_text_details" />

            <ImageButton
                android:id="@+id/img_med_dec"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryLight"
                android:gravity="center"
                android:src="@drawable/ic_remove"
                android:scaleType="fitCenter"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/secondary_text_details" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/med_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingEnd="@dimen/padding_end"
            android:paddingStart="@dimen/padding_start">

            <TextView
                android:id="@+id/tv_label_med_price"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_end_details"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical|end"
                android:text="@string/label_details_med_price"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tv_value_med_price"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/colorPrimaryLight"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding_start"
                android:text="Price"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/secondary_text_details" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/med_discount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingEnd="@dimen/padding_end"
            android:paddingStart="@dimen/padding_start">

            <TextView
                android:id="@+id/tv_label_med_discount"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_end_details"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical|end"
                android:text="@string/label_details_med_disc_price"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tv_value_med_discount"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/colorPrimaryLight"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding_start"
                android:text="Discount"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/secondary_text_details" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/med_exp_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingEnd="@dimen/padding_end"
            android:paddingStart="@dimen/padding_start">

            <TextView
                android:id="@+id/tv_label_med_exp_date"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_end_details"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical|end"
                android:text="@string/label_details_med_exp_date"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tv_value_med_exp_date"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/colorPrimaryLight"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding_start"
                android:text="Date"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/secondary_text_details" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_product"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_30dp"
            android:layout_marginStart="@dimen/dimen_30dp"
            android:src="@drawable/ic_image_not_found"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/med_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/padding_end"
            android:paddingStart="@dimen/padding_start">

            <TextView
                android:id="@+id/tv_label_med_note"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_end_details"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical|top"
                android:text="@string/label_details_med_note"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tv_value_med_note"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100dp"
                android:maxLines="10"
                android:ellipsize="end"
                android:background="@color/colorPrimaryLight"
                android:gravity="center_vertical|top"
                android:paddingStart="@dimen/padding_start"
                android:text="XXX"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/secondary_text_details" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30dp">
        </View>

    </LinearLayout>

</ScrollView>


